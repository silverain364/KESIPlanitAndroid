<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.NotificationFragment"
        android:background="@color/black">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="알림"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="80dp" />

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification"
            android:id="@+id/icon"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="김시현 님께서 새로운 일정을 추가하였습니다."
            android:textSize="20dp"
            android:id="@+id/notification1"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/icon"
            app:layout_constraintTop_toTopOf="@+id/icon" />
    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="1시간 전"
            android:textSize="10dp"
            android:id="@+id/time1"
            android:textColor="@color/gray"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/notification1"
            app:layout_constraintLeft_toRightOf="@+id/group_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KESI"
            android:textSize="10dp"
            android:id="@+id/group_name"
            android:textColor="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/notification1"
            app:layout_constraintLeft_toRightOf="@+id/icon"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification_group"
            android:id="@+id/icon_group"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time1"/>

    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="손은비 님께서 'KESI' 그룹에 초대하였습니다."
            android:textSize="20dp"
            android:id="@+id/notification2"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/icon_group"
            app:layout_constraintTop_toTopOf="@+id/icon_group" />



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1시간 전"
            android:textSize="10dp"
            android:id="@+id/time2"
            android:textColor="@color/gray"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/notification2"
            app:layout_constraintLeft_toRightOf="@+id/icon_group"/>

</androidx.constraintlayout.widget.ConstraintLayout>
