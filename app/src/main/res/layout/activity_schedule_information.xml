<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        tools:context=".ScheduleInformationActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정 정보"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar"
            app:layout_constraintRight_toRightOf="@+id/toolbar"/>
    <TextView
            android:text="팀프로젝트 회의"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>
    <ImageView
            android:id="@+id/ivPerson"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/tvPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손은비"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/ivPerson"
            app:layout_constraintStart_toEndOf="@+id/ivPerson"
            app:layout_constraintBottom_toBottomOf="@+id/ivPerson"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:id="@+id/ivDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@+id/ivPerson"
            app:layout_constraintStart_toStartOf="@+id/ivPerson"
            android:layout_marginTop="15dp"/>
    <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 7월 26일 오후 7시"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/ivDate"
            app:layout_constraintStart_toEndOf="@+id/ivDate"
            app:layout_constraintBottom_toBottomOf="@+id/ivDate"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:id="@+id/ivTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_time"
            app:layout_constraintTop_toBottomOf="@+id/ivDate"
            app:layout_constraintStart_toStartOf="@+id/ivDate"
            android:layout_marginTop="15dp"/>
    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3시간"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/ivTime"
            app:layout_constraintStart_toEndOf="@+id/ivTime"
            app:layout_constraintBottom_toBottomOf="@+id/ivTime"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"
            app:layout_constraintTop_toBottomOf="@+id/ivTime"
            app:layout_constraintStart_toStartOf="@+id/ivTime"
            android:layout_marginTop="15dp"/>
    <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 은평구 역촌동 14-31"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/ivPlace"
            app:layout_constraintStart_toEndOf="@+id/ivPlace"
            app:layout_constraintBottom_toBottomOf="@+id/ivPlace"
            android:layout_marginStart="10dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/tvPlace"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="여름방학 프로젝트 7차 회의\n일정 잡아놨습니다.\n\n간단하게 자신이 한 것 + 일정 조정\n진행할 것 같습니다!\n\n만약 해당 시간이 안 되면 다른 가능한 시간대 메세지 남겨주세요 :) "
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:background="@drawable/description_background"
            android:id="@+id/tvDescription"/>
    <Button
            android:id="@+id/btnAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찬성"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintStart_toStartOf="@+id/tvDescription"
            app:layout_constraintEnd_toStartOf="@+id/btnDisagree" android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/btnDisagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반대"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintEnd_toEndOf="@+id/tvDescription"
            app:layout_constraintStart_toEndOf="@+id/btnAgree" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>