<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/mainColor"
        android:padding="20dp">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification"
            android:id="@+id/ivIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="김시현 님께서 새로운 일정을 추가하였습니다."
            android:textSize="20dp"
            android:id="@+id/tvNotificationMessage"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/ivIcon"
            app:layout_constraintTop_toTopOf="@+id/ivIcon" />
    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="1시간 전"
            android:textSize="10dp"
            android:id="@+id/tvTime"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toLeftOf="@+id/tvNotificationMessage"
            app:layout_constraintTop_toBottomOf="@+id/tvNotificationMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>