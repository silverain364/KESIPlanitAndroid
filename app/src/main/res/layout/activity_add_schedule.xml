<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        tools:context=".AddScheduleActivity">


    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="30sp"
            android:ems="10"
            android:id="@+id/etTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="제목을 입력하세요."
            android:textColorHint="@color/white"/>
    <TextView
            android:text="7.12(금)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStartDate"
            app:layout_constraintStart_toStartOf="@+id/etTitle"
            app:layout_constraintTop_toBottomOf="@+id/etTitle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    <TextView
            android:text="7.13(토)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEndDate"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/etTitle"
            app:layout_constraintTop_toBottomOf="@+id/etTitle"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"/>
    <TextView
            android:text="오전 7:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/tvStartDate"
            app:layout_constraintEnd_toEndOf="@+id/tvStartDate"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDate"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
            android:text="오후 8:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvEndDate"
            app:layout_constraintTop_toBottomOf="@+id/tvEndDate"
            app:layout_constraintEnd_toEndOf="@+id/tvEndDate"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivArrow"
            app:layout_constraintEnd_toStartOf="@+id/tvEndDate"
            app:layout_constraintStart_toEndOf="@+id/tvStartDate"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toTopOf="@+id/tvStartDate"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:tint="@color/white"/>
    <Button
            android:text="종일off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAllDay"
            app:layout_constraintTop_toBottomOf="@+id/ivArrow"
            app:layout_constraintEnd_toEndOf="@+id/ivArrow"
            app:layout_constraintStart_toStartOf="@+id/ivArrow"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/btnAllDay"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@color/white"/>
    <TextView
            android:text="반복 설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRepeat"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="색깔"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvColor"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvRepeat"
            app:layout_constraintStart_toStartOf="@+id/tvRepeat"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="알림"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotification"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvColor"
            app:layout_constraintStart_toStartOf="@+id/tvColor"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="메모"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMemo"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNotification"
            app:layout_constraintStart_toStartOf="@+id/tvNotification" android:layout_marginTop="30dp"/>
    <TextView
            android:text="장소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlace"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvMemo"
            app:layout_constraintStart_toStartOf="@+id/tvMemo"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="링크"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLink"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPlace"
            app:layout_constraintStart_toStartOf="@+id/tvPlace"
            android:layout_marginTop="30dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivRepeatArrow"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/tvRepeat"
            app:layout_constraintBottom_toBottomOf="@+id/tvRepeat"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivNotificationArrow"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivRepeatArrow"
            app:layout_constraintBottom_toBottomOf="@+id/tvNotification"
            app:layout_constraintTop_toTopOf="@+id/tvNotification"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivMemoArrow"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivNotificationArrow"
            app:layout_constraintBottom_toBottomOf="@+id/tvMemo"
            app:layout_constraintTop_toTopOf="@+id/tvMemo"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivPlaceArrow"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivMemoArrow"
            app:layout_constraintBottom_toBottomOf="@+id/tvPlace"
            app:layout_constraintTop_toTopOf="@+id/tvPlace"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/ivLinkArrow"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivPlaceArrow"
            app:layout_constraintBottom_toBottomOf="@+id/tvLink"
            app:layout_constraintTop_toTopOf="@+id/tvLink"/>
    <TextView
            android:text="반복 안함"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRepeatValue"
            app:layout_constraintTop_toTopOf="@+id/ivRepeatArrow"
            app:layout_constraintBottom_toBottomOf="@+id/ivRepeatArrow"
            app:layout_constraintEnd_toStartOf="@+id/ivRepeatArrow" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="1일 전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotificationValue"
            app:layout_constraintTop_toTopOf="@+id/ivNotificationArrow"
            app:layout_constraintEnd_toStartOf="@+id/ivNotificationArrow"
            app:layout_constraintBottom_toBottomOf="@+id/ivNotificationArrow" android:layout_marginEnd="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMemoValue"
            app:layout_constraintBottom_toBottomOf="@+id/ivMemoArrow"
            app:layout_constraintTop_toTopOf="@+id/ivMemoArrow"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/ivMemoArrow"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlaceValue"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceArrow"
            app:layout_constraintTop_toTopOf="@+id/ivPlaceArrow"
            app:layout_constraintBottom_toBottomOf="@+id/ivPlaceArrow" android:layout_marginEnd="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLinkValue"
            app:layout_constraintEnd_toStartOf="@+id/ivLinkArrow"
            app:layout_constraintTop_toTopOf="@+id/ivLinkArrow"
            app:layout_constraintBottom_toBottomOf="@+id/ivLinkArrow" android:layout_marginEnd="10dp"/>
    <Button
            android:text="추가하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_close"
            android:id="@+id/ivClose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:tint="@color/white"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/tvColor"
            app:layout_constraintBottom_toBottomOf="@+id/tvColor"
            app:layout_constraintEnd_toEndOf="@+id/ivRepeatArrow">
        <RadioButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#ff0000"/>
        <RadioButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:buttonTint="#ffff00"
                android:background="#ffff00"/>
        <RadioButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00ff00"/>
        <RadioButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#0000ff"/>
        <RadioButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#ff00ff"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>